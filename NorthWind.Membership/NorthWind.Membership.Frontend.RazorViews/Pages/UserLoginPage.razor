@page "/user/login"
@using NorthWind.Membership.Frontend.RazorViews.Resources
<ErrorBoundary @ref=ErrorBoundaryRef>
    <ChildContent>
        <UserLoginComponent ViewModel=ViewModel />
    </ChildContent>
    <ErrorContent>
        <ExceptionDisplay Exception=context />
        <button class="btn btn-danger" @onclick=Recover>
            @CommonMessages.OK
        </button>
    </ErrorContent>
</ErrorBoundary>