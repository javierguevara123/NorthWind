            "type": "string",
            "nullable": true
          },
          "shipCity": {
            "type": "string",
            "nullable": true
          },
          "shipCountry": {
            "type": "string",
            "nullable": true
          },
          "shipPostalCode": {
            "type": "string",
            "nullable": true
          },
          "orderDetails": {
            "type": "array",
